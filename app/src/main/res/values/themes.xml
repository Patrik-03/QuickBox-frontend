<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.QuickBoxFront" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:colorPrimary">@color/color3</item>
    </style>
    <style name="materialButtonStyle" parent="Theme.QuickBoxFront">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/color1</item>
        <item name="android:background">@drawable/round_corners_button</item>
    </style>

    <style name="SplashTheme" parent="Theme.QuickBoxFront">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:scaleGravity">center</item>
        <item name="android:scaleType">center</item>
        <item name="colorPrimary">@color/color3</item>
        <item name="colorSecondary">@color/color3</item>
        <item name="colorTertiary">@color/color3</item>
        <item name="android:statusBarColor">@color/color3</item>
        <item name="android:navigationBarColor">@color/color3</item>
    </style>
    <style name="materialTabStyle" parent="Theme.QuickBoxFront">
        <item name="android:textColor">@color/trueBlack</item>
        <item name="android:textColorPrimary">@color/trueBlack</item>
        <item name="android:background">@drawable/round_corners</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
    <style name="materialButtonStyleBack" parent="Theme.QuickBoxFront">
        <item name="android:background">@drawable/back_button</item>
    </style>
    <style name="textStyle" parent="Theme.QuickBoxFront">
        <item name="android:textColor">@color/trueBlack</item>
    </style>
</resources>

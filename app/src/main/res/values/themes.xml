<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_QuickBox_Front" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>
    <style name="ButtonStyle"   parent="Widget.Material3.Button.TextButton" >
        <item name="android:backgroundTint">@color/purplelight</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.QuickBoxFront" parent="Theme_QuickBox_Front" />
    <style name="Theme.QuickBoxFront.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.QuickBoxFront.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.QuickBoxFront.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
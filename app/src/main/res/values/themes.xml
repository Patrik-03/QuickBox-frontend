<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuickBoxFront" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorPrimary">@color/purplelight</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorAccent">@color/purplelight</item>
        <item name="android:colorSecondary">@color/purplelight</item>
        <!-- Button Attributes -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/purplelight</item>
    </style>
</resources>

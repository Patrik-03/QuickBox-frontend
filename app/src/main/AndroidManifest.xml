<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >


    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="com.google.android.gms.permission.WEARABLE_DATA_LAYER"/>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/quickbox_l"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuickBoxFront"
        tools:targetApi="31"
        android:networkSecurityConfig="@xml/network_sec">
        <activity
            android:name=".SignIn_Handler"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUp_Handler"
            android:screenOrientation="portrait"/>
        <activity android:name=".MapSignUp_Handler"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Home_Handler"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_SENDER" />
            </intent-filter>
        </activity>
        <activity android:name=".Profile_Handler"
            android:screenOrientation="portrait"/>
        <activity android:name=".Language_Handler"
            android:screenOrientation="portrait"/>
        <activity android:name=".CreateDel_Handler"
            android:screenOrientation="portrait">
            <meta-data
                android:name="com.google.mlkit.vision.DEPENDENCIES"
                android:value="barcode_ui"
                android:screenOrientation="portrait"/>
        </activity>
        <activity android:name=".History_Handler"
            android:screenOrientation="portrait"/>
        <activity android:name=".Delivery_Handler"
            android:screenOrientation="portrait"/>
        <activity android:name=".Map_Handler"
            android:screenOrientation="portrait"/>

    </application>

</manifest>